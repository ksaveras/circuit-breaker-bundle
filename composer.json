{
    "name": "ksaveras/circuit-breaker-bundle",
    "type": "symfony-bundle",
    "description": "Circuit Breaker Symfony Bundle",
    "keywords": ["circuit-breaker", "circuit-breaker-bundle", "symfony-bundle", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ksaveras Sakys",
            "email": "xawiers@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ksaveras/circuit-breaker": "^1.0",
        "symfony/framework-bundle": "^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.6",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^10.2",
        "rector/rector": "^0.17.0"
    },
    "autoload": {
        "psr-4": {
            "Ksaveras\\CircuitBreakerBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "phpcs": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpcs:fix": "./vendor/bin/php-cs-fixer fix",
        "phpstan": "./vendor/bin/phpstan analyse",
        "rector": "./vendor/bin/rector process --dry-run",
        "rector:fix": "./vendor/bin/rector process",
        "test": "./vendor/bin/phpunit",
        "test:coverage": "@php -dapc.enable_cli=1 ./vendor/bin/phpunit --coverage-clover=coverage/clover.xml"
    },
    "config": {
        "sort-packages": true
    }
}
