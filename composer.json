{
    "name": "ksaveras/circuit-breaker-bundle",
    "type": "symfony-bundle",
    "description": "Circuit Breaker Symfony Bundle",
    "keywords": ["circuit-breaker", "circuit-breaker-bundle", "symfony-bundle", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ksaveras Sakys",
            "email": "xawiers@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ksaveras/circuit-breaker": "^1.0",
        "symfony/framework-bundle": "^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.6",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^4.0|^5.0|^6.0"
    },
    "autoload": {
        "psr-4": {
            "Ksaveras\\CircuitBreakerBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "phpcs": "@php ./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpcs:fix": "@php ./vendor/bin/php-cs-fixer fix",
        "phpstan": "@php ./vendor/bin/phpstan analyse",
        "test": "@php ./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
